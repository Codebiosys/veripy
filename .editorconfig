# EditorConfig is awesome: https://EditorConfig.org

# top-most config
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile]
# Makefiles only use tabs
indent_style = tab

[*.json]
max_line_length = off

[*.py]
indent_size = 4
